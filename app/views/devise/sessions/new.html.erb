<div class="body" style="padding-top: 20px;">
<div style="text-align: center;">
  <%= image_tag("/assets/images/garuda.png", height: '160', width: '160') %>
</div>
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'sky-form' }) do |f| %>
  <header>Login Authentication for accessing eKBRI services</header>
  <fieldset>
	<div class="row">
		<section class="col col-5">
		  <label class="label">Email</label>
		  <label class="input">
		    <%= f.input_field :email, :autofocus => true %>
		    <i class="icon-append icon-envelope"></i>
		  </label>
		</section>
		<section class="col col-5">
		  <label class="label">Password</label>
	      <label class="input">
		    <%= f.input_field :password %>
		    <i class="icon-append icon-lock"></i>
		  </label>
		</section>
  		<section class="col col-2">
  			<label class="label">&nbsp;</label>
  			<label class="checkbox">
  				<input class="boolean optional" id="user_remember_me" name="user[remember_me]" type="checkbox" value="1"><i></i>Keep Me Signed In
  			</label>
  		</section>
	</div>
  </fieldset>
  <fieldset>
  	<p>Have an account already but <b>forget</b> your own account's password? Reset password through <%= link_to "Reset my password.", new_password_path(resource_name) %> </p>
  	<p>Upon clicking "Reset my password", please check your e-mail and follow the link to reset your password to eKBRI.</p>
  </fieldset>
  
  <footer>
	<button type="submit" class="button">Sign Me In</button>
	<button type="button" class="button button-secondary" onclick="window.history.back();">Back</button>
  </footer>
  
<% end %>
</div>

