		<section class="col col-4">
		  <label class="label">Who are you?</label>
		  <label class="select">
		    <%= f.input_field :individual, collection: { 'Personal Applicant' => 'true', 'Travel Agency' => 'false' } %>
		  <i></i>
		  </label>
		</section>
		<section class="col col-4">
		  <label class="label">First Name</label>
	      <label class="input">
		    <%= f.input_field :first_name, :html => { :class => 'hurufBesar' } %>
		    <i class="icon-append icon-user"></i>
		  </label>
		</section>
		<section class="col col-4">
		  <label class="label">Last Name</label>
