<div class="body" style="padding-top: 20px;">
<div style="text-align: center;">
  <%= image_tag("/assets/images/garuda.png", height: '160', width: '160') %>
</div>
<% unless @errors.nil? %>
			<h2 style="color:white;background:red;">Registration Failed. Please check messages below</h2>
				<div style="padding:4px;color:red;font-size:10pt;">
					<% @errors.each do |fs| %>
						<%= simple_format(fs[0].to_s + " = " + fs[1].to_s + "\n")  %>
					<%end%>
				</div>
			<%end%>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'sky-form' }) do |f| %>
  <header>eKBRI Account Modification</header>
  <fieldset>
	<div class="row">
		<section class="col col-4">
		  <label class="label">First Name</label>
	      <label class="input">
		    <%= f.input_field :first_name, :html => { :class => 'hurufBesar' }, :autofocus => true %>
		    <i class="icon-append icon-user"></i>
		  </label>
		</section>
		<section class="col col-4">
		  <label class="label">Last Name</label>
	      <label class="input">
  		    <%= f.input_field :last_name, :html => { :class => 'hurufBesar' } %>
  		    <i class="icon-append icon-user"></i>
  		  </label>
		</section>
		<section class="col col-4">
		  <label class="label">Email</label>
		  <label class="input">
		    <%= f.input_field :email, :required => true, :readonly => true %>
		    <i class="icon-append icon-envelope"></i>
		  </label>
		</section>
	</div>
  </fieldset>
  
    
    <fieldset>
  	<div class="row">
		<section class="col col-4">
		  <label class="label">New Password</label>

	      <label class="input">
		    <%= f.input_field :password, :required => true, :autocomplete => "off", :hint => "Leave it blank if you don't want to change it", :required => false %>
		    <i class="icon-append icon-lock"></i>
		  </label>
		  <div class="note"><strong>Note:</strong> Leave this BLANK if you don't wish to change your password.</div>
		</section>
		<section class="col col-4">
		  <label class="label">New Password Confirmation</label>
	      <label class="input">
  		    <%= f.input_field :password_confirmation, :required => false %>
  		    <i class="icon-append icon-lock"></i>
  		  </label>

  		  <div class="note"><strong>Note:</strong> Leave this BLANK if you don't wish to change your password.</div>

		</section>
		<section class="col col-4">
		  <label class="label">Your Current Password</label>
	      <label class="input">
  		    <%= f.input_field :current_password, :hint => "We need your current password to confirm your changes", :required => true %>
  		    <i class="icon-append icon-lock"></i>
  		  </label>
  		  <div class="note"><strong>Note:</strong> We require your current password to confirm your password change. Leave BLANK if no password change.</div>

		</section>
	</div>
  </fieldset>
