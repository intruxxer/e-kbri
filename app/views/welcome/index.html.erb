<div style="text-align: center; padding-top: 20px; position: relative;">
<%= image_tag("/assets/images/garuda.png", height: '160', width: '160') %>
<h1>Welcome to electronic KBRI Seoul services (E-KBRI)</h1>
<hr />
<% if user_signed_in? then %>
		<div class="row">
		<div class="col-md-12">
								<!-- start: TABLE WITH IMAGES PANEL -->
								<div class="panel panel-default">
									<div class="panel-heading">
										<i class="fa fa-external-link-square"></i>
										<h4>Rekapitulasi Lapor Diri via e-KBRI</h4>										
									</div>
									<div class="panel-body">
										<% if @userreport.count > 0 then %>
										<table class="table table-striped table-bordered table-hover" id="sample-table-2">
											<thead>
												<tr>																										
													<th>No. Pendaftaran Diri</th>
													<th><center>Timestamp</center></th>													
													<th><center>Status</center></th>	
													<th><center>Perbaharui Data</center></th>
												</tr>
											</thead>
											<tbody>												
												<% @userreport.each do |t| %>
												<tr>													
													<td align="left"><%= t.ref_id %></td>
													<td class="center"><%= t.updated_at %></td>	
													<td class="center"><%= "Terdaftar di KBRI Seoul" %></td>													
													<td class="center">
													<%= link_to 'Edit', edit_report_path(t.user_id) %>
													</td>
												</tr>												
												<% end %>
											</tbody>											
										</table>
										<% else %>
										Anda belum pernah melaporkan diri ke KBRI Seoul melalui sistem e-KBRI.
										<% end %>
									</div>
								</div>
								<!-- end: TABLE WITH IMAGES PANEL -->
		</div>
		</div>
<% end %>
<% if user_signed_in? then %>
		<div class="row">
		<div class="col-md-12">
								<!-- start: TABLE WITH IMAGES PANEL -->
								<div class="panel panel-default">
									<div class="panel-heading">
										<i class="fa fa-external-link-square"></i>
										<h4>Visa Application Recapitulation via e-KBRI</h4>										
									</div>
									<div class="panel-body">
										<% if @uservisa .count > 0 %>
										<table class="table table-striped table-bordered table-hover" id="sample-table-2">
											<thead>
												<tr>																										
													<th>Reference No.</th>
													<th><center>Timestamp</center></th>													
													<th><center>Status</center></th>	
													<th><center>Amendment</center></th>
													<th><center></center></th>
													<th><center></center></th>
													<th><center></center></th>
												</tr>
											</thead>
											<tbody>												
												<% @uservisa.each do |t| %>
												<tr>													
													<td align="left"><%= t.ref_id %></td>
													<td class="center"><%= t.updated_at %></td>	
													<td class="center"><%= t.status %></td>													
													<td class="center">
													<%= link_to edit_visa_path(t.id) do %>
														<span class="glyphicon glyphicon-pencil"></span>
														<span class="glyphicon-class">Edit</span>
													<% end %>
													</td>
													<td class="center">
														<%= link_to('/reapply/visa/'+t.id) do %>
														<span class="glyphicon glyphicon-export"></span>
														<span class="glyphicon-class">Re-apply Visa</span>
														<% end %>
													</td>
													<td class="center">
														<%= link_to('/delete/visa/'+t.id) do %>
														<span class="glyphicon glyphicon-trash"></span>
														<span class="glyphicon-class">Delete</span>
														<% end %>
													</td>
													<td class="center">
														<%= link_to('/download/visa/'+t.id) do %>
														<span class="glyphicon glyphicon-save"></span>
														<span class="glyphicon-class">Download</span>
														<% end %>
													</td>
												</tr>												
												<% end %>
											</tbody>											
										</table>
										<% else %>
										You haven't made any prior Indonesia's visa application to KBRI Seoul via e-KBRI.
										<% end %>
									</div>
								</div>
								<!-- end: TABLE WITH IMAGES PANEL -->
		</div>
		</div>
<% end %>
<% if user_signed_in? then %>	
		<div class="row">
		<div class="col-md-12">
								<!-- start: TABLE WITH IMAGES PANEL -->
								<div class="panel panel-default">
									<div class="panel-heading">
										<i class="fa fa-external-link-square"></i>
										<h4>Rekapitulasi Aplikasi Paspor via e-KBRI</h4>										
									</div>
									<div class="panel-body">
										<% if @userpassport.count > 0 %>
										<table class="table table-striped table-bordered table-hover" id="sample-table-2">
											<thead>
												<tr>																										
													<th>No. Referensi Aplikasi</th>
													<th><center>Waktu Aplikasi</center></th>													
													<th><center>Status</center></th>	
													<th><center>Pengubahan</center></th>
													<th><center></center></th>
													<th><center></center></th>
													<th><center></center></th>
												</tr>
											</thead>
											<tbody>												
												<% @userpassport.each do |t| %>
												<tr>													
													<td align="left"><%= t.ref_id %></td>
													<td class="center"><%= t.updated_at %></td>	
													<td class="center"><%= t.status %></td>													
													<td class="center">
													<%= link_to edit_passport_path(t.owner_id) do %>
														<span class="glyphicon glyphicon-pencil"></span>
														<span class="glyphicon-class">Edit</span>
													<% end %>
													</td>
													<td class="center">
														<%= link_to('/reapply/passport/'+t.id) do %>
														<span class="glyphicon glyphicon-export"></span>
														<span class="glyphicon-class">Ajukan ke KBRI Lagi</span>
														<% end %>
													</td>
													<td class="center">
														<%= link_to('/delete/passport/'+t.id) do %>
														<span class="glyphicon glyphicon-trash"></span>
														<span class="glyphicon-class">Buang Berkas</span>
														<% end %>
													</td>
													<td class="center">
														<%= link_to('/download/passport/'+t.id) do %>
														<span class="glyphicon glyphicon-save"></span>
														<span class="glyphicon-class">Unduh Berkas</span>
														<% end %>
													</td>
												</tr>												
												<% end %>
											</tbody>											
										</table>
										<% else %>
										Anda belum pernah mengajukan aplikasi paspor/SPLP ke KBRI Seoul melalui sistem e-KBRI.
										<% end %>
									</div>
								</div>
								<!-- end: TABLE WITH IMAGES PANEL -->
		</div>
		</div>
<% end %>

