<div style="text-align: center; padding-top: 20px; position: relative;">
<%= image_tag("/assets/images/garuda.png", height: '160', width: '160') %>
<h1>Welcome to electronic KBRI Seoul services (E-KBRI)</h1>
<hr />
		<div class="row">
		<div class="col-md-12">
								<!-- start: TABLE WITH IMAGES PANEL -->
								<div class="panel panel-default">
									<div class="panel-heading">
										<i class="fa fa-external-link-square"></i>
										<h4>Rekapitulasi Lapor Diri via e-KBRI</h4>										
									</div>
									<div class="panel-body">
										<% if true then %>
										No Report to KBRI has been made.
										<% elsif false %>
										<table class="table table-striped table-bordered table-hover" id="sample-table-2">
											<thead>
												<tr>																										
													<th>Nama Aplikasi</th>
													<th><center>Timestamp</center></th>													
													<th><center>Status</center></th>	
													<th></th>
												</tr>
											</thead>
											<tbody>												
												<% @userreport.each do |t| %>
												<tr>													
													<td align="left"><%= t[1]["name"] %></td>
													<td class="center"><%= t[1]["timestamp"] %></td>	
													<td class="center"><%= t[1]["status"] %></td>													
													<td class="center">
													<%= link_to 'Edit', t[1]["link"] %>
													</td>
												</tr>												
												<% end %>
											</tbody>											
										</table>
										<% end %>
									</div>
								</div>
								<!-- end: TABLE WITH IMAGES PANEL -->
		</div>
		</div>
	
		<div class="row">
		<div class="col-md-12">
								<!-- start: TABLE WITH IMAGES PANEL -->
								<div class="panel panel-default">
									<div class="panel-heading">
										<i class="fa fa-external-link-square"></i>
										<h4>Visa Application Recapitulation via e-KBRI</h4>										
									</div>
									<div class="panel-body">
										<% if @uservisa.length > 0 %>
										<table class="table table-striped table-bordered table-hover" id="sample-table-2">
											<thead>
												<tr>																										
													<th>Application Name</th>
													<th><center>Timestamp</center></th>													
													<th><center>Status</center></th>	
													<th></th>
												</tr>
											</thead>
											<tbody>												
												<% @uservisa.each do |t| %>
												<tr>													
													<td align="left"><%= t.ref_id %></td>
													<td class="center"><%= t.updated_at %></td>	
													<td class="center"><%= t.status %></td>													
													<td class="center">
													<%= link_to 'Edit', edit_visa_path(t.id) %>
													</td>
												</tr>												
												<% end %>
											</tbody>											
										</table>
										<% end %>
									</div>
								</div>
								<!-- end: TABLE WITH IMAGES PANEL -->
		</div>
		</div>
	
		<div class="row">
		<div class="col-md-12">
								<!-- start: TABLE WITH IMAGES PANEL -->
								<div class="panel panel-default">
									<div class="panel-heading">
										<i class="fa fa-external-link-square"></i>
										<h4>Rekapitulasi Aplikasi Paspor via e-KBRI</h4>										
									</div>
									<div class="panel-body">
										<% if @latestpassportdata.length > 0 %>
										<table class="table table-striped table-bordered table-hover" id="sample-table-2">
											<thead>
												<tr>																										
													<th>Nama Aplikasi</th>
													<th><center>Timestamp</center></th>													
													<th><center>Status</center></th>	
													<th></th>
												</tr>
											</thead>
											<tbody>												
												<% @userpassport.each do |t| %>
												<tr>													
													<td align="left"><%= t[1]["name"] %></td>
													<td class="center"><%= t[1]["timestamp"] %></td>	
													<td class="center"><%= t[1]["status"] %></td>													
													<td class="center">
													<%= link_to 'Edit', t[1]["link"] %>
													</td>
												</tr>												
												<% end %>
											</tbody>											
										</table>
										<% end %>
									</div>
								</div>
								<!-- end: TABLE WITH IMAGES PANEL -->
		</div>
		</div>
		
