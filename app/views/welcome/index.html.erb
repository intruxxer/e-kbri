<div style="text-align: center; padding-top: 20px; position: relative;">
<%= image_tag("/assets/images/garuda.png", height: '160', width: '160') %>
<h1>Welcome to electronic KBRI Seoul services (E-KBRI)</h1>
<hr />
<% if user_signed_in? then %>
<% if !current_user.citizenship or current_user.has_role? :admin or current_user.has_role? :moderator %>
		<div class="row">
		<div class="col-md-9">
								<!-- start: TABLE WITH IMAGES PANEL -->
								<div class="panel panel-default">
									<div class="panel-heading">
										<i class="fa fa-external-link-square"></i>
										<h4>Visa Application Records</h4>									
									</div>
									<div class="panel-body">
										<% if @uservisa .count > 0 %>
										<table class="table table-striped table-bordered table-hover" id="sample-table-2">
											<thead>
												<tr>																										
													<th>Reference No.</th>
													<th><center>Date</center></th>													
													<th><center>Status</center></th>	
													<th><center>Amendment Menu</center></th>
												</tr>
											</thead>
											<tbody>												
												<% @uservisa.each do |t| %>
												<tr>													
													<td align="left"><%= t.ref_id %></td>
													<td class="center"><%= t.updated_at.strftime("%-d %b %y") %></td>	
													<td class="center"><%= t.status %></td>													
													<td class="center">
													<%= link_to edit_visa_path(t.id) do %>
														<span class="glyphicon glyphicon-pencil"></span>
														<span class="glyphicon-class">Update</span>
														<% end %>
													|&nbsp;
													<%= link_to('visas/reapply/'+t.id) do %>
														<span class="glyphicon glyphicon-export"></span>
														<span class="glyphicon-class">Notify Update to Embassy</span>
														<% end %>
													|&nbsp;
													<%= link_to'visas/'+t.id, :method=>'delete' do %>
														<span class="glyphicon glyphicon-trash"></span>
														<span class="glyphicon-class">Delete</span>
														<% end %>
													|&nbsp;
													<%= link_to 'visas/'+t.id+'.pdf', :target => "_blank" do %>
														<span class="glyphicon glyphicon-save"></span>
														<span class="glyphicon-class">Download</span>
														<% end %>
													</td>
												</tr>												
												<% end %>
											</tbody>											
										</table>
										<% else %>
										You haven't made any prior Indonesia's visa application to KBRI Seoul via e-KBRI.
										<% end %>
									</div>
								</div>
								<!-- end: TABLE WITH IMAGES PANEL -->
		</div>
		<div class="col-md-3">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4>Visa Payment Due</h4>
				</div>
				<div class="panel-body">
					<% if @uservisa then %>
					  <% x = 1; @uservisa.each do |v| %>
					  <div>
					  	<%= "#{x.to_s}. USD #{v.visafee}" %>
					  	<%= "(##{v.ref_id}) is unpaid." %>
					  </div>
					  <% end %>
					<% x += 1 %>
					<% else   %>
					<div><%= 'You do not have overdue/unpaid visa application fees.' %></div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
<% end %>
<% end %>
<% if user_signed_in? and current_user.citizenship then %>	
		<div class="row">
		<div class="col-md-9">
								<!-- start: TABLE WITH IMAGES PANEL -->
								<div class="panel panel-default">
									<div class="panel-heading">
										<i class="fa fa-external-link-square"></i>
										<h4>Rekaman Aplikasi Paspor via e-KBRI</h4>										
									</div>
									<div class="panel-body">
										<% if @userpassport.count > 0 %>
										<table class="table table-striped table-bordered table-hover" id="sample-table-2">
											<thead>
												<tr>																										
													<th>No. Referensi</th>
													<th><center>Tanggal</center></th>													
													<th><center>Status</center></th>	
													<th><center>Menu Pengubahan</center></th>
													
												</tr>
											</thead>
											<tbody>												
												<% @userpassport.each do |t| %>
												<tr>													
													<td align="left"><%= t.ref_id %></td>
													<td class="center"><%= t.updated_at.strftime("%-d %b %y") %></td>	
													<td class="center"><%= t.status %></td>													
													<td class="center">
													<%= link_to (edit_passport_path(t.id)) do %>
														<span class="glyphicon glyphicon-pencil"></span>
														<span class="glyphicon-class">Perbaharui</span>
													<% end %>
													|&nbsp;
													<%= link_to('passports/reapply/'+t.id) do %>
														<span class="glyphicon glyphicon-export"></span>
														<span class="glyphicon-class">Konfirmasi ke KBRI</span>
														<% end %>
													|&nbsp;
													<%= link_to 'passports/'+t.id, :method=>'delete' do %>
														<span class="glyphicon glyphicon-trash"></span>
														<span class="glyphicon-class">Buang</span>
														<% end %>
													|&nbsp;
													<%= link_to 'passports/'+t.id+'.pdf', :target => "_blank" do %>
														<span class="glyphicon glyphicon-save"></span>
														<span class="glyphicon-class">Unduh</span>
														<% end %>
													</td>
												</tr>												
												<% end %>
											</tbody>											
										</table>
										<% else %>
										Anda belum pernah mengajukan aplikasi paspor/SPLP ke KBRI Seoul melalui sistem e-KBRI.
										<% end %>
									</div>
								</div>
								<!-- end: TABLE WITH IMAGES PANEL -->
		</div>
		<div class="col-md-3">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4>Passport Payment History</h4>
				</div>
				<div class="panel-body">
					<% if @userpassport.count > 0   %>
					  <% i = 1; @userpassport.each do |h| %>
					    <% if h.paspor_type == 24 then %>
					      <div><%= i.to_s+". " +h.ref_id+' = USD 6' %></div>
					    <% elsif h.paspor_type == 48  %>
					      <div><%= i.to_s+". " +h.ref_id+' = USD 22' %></div>
					    <% end %>
					    <% i += 1 %>
					  <% end %>
					<% else   %>
					    <div><%= 'Anda tidak mempunyai tagihan aplikasi paspor yang harus dibayar.' %></div>
					<% end %>
				</div>
			</div>
		</div>
		</div>
<% end %>
<% if user_signed_in? and current_user.citizenship then %>
		<div class="row">
		<div class="col-md-9">
								<!-- start: TABLE WITH IMAGES PANEL -->
								<div class="panel panel-default">
									<div class="panel-heading">
										<i class="fa fa-external-link-square"></i>
										<h4>Rekaman Lapor Diri via e-KBRI</h4>										
									</div>
									<div class="panel-body">
										<% if @userreport.count > 0 then %>
										<table class="table table-striped table-bordered table-hover" id="sample-table-2">
											<thead>
												<tr>																										
													<th>No. Pendaftaran Diri</th>
													<th><center>Tanggal</center></th>													
													<th><center>Status</center></th>	
													<th><center>Menu Pengubahan</center></th>
												</tr>
											</thead>
											<tbody>												
												<% @userreport.each do |t| %>
												<tr>													
													<td align="left"><%= t.ref_id %></td>
													<td class="center"><%= t.updated_at.strftime("%-d %b %y") %></td>	
													<td class="center"><%= "Terdaftar di KBRI Seoul" %></td>													
													<td class="center">
													<%= link_to (edit_report_path(t.user_id)) do %>
														<span class="glyphicon glyphicon-pencil"></span>
														<span class="glyphicon-class">Perbaharui</span>
													<% end %>
													&nbsp;atau&nbsp;
													<%= link_to (edit_report_path(t.user_id)) do %>
														<span class="glyphicon glyphicon-plane"></span>
														<span class="glyphicon-class">Laporkan Kepulangan</span>
														<% end %>
													|&nbsp;
													<%= link_to 'reports/'+t.id+'.pdf', :target => "_blank" do %>
														<span class="glyphicon glyphicon-save"></span>
														<span class="glyphicon-class">Unduh</span>
														<% end %>
													</td>
												</tr>												
												<% end %>
											</tbody>											
										</table>
										<% else %>
										Anda belum pernah melaporkan diri ke KBRI Seoul melalui sistem e-KBRI.
										<% end %>
									</div>
								</div>
								<!-- end: TABLE WITH IMAGES PANEL -->
		</div>
		</div>
<% end %>

<br />
