<div class="body" style="padding-top: 20px;">
			<div style="text-align: center;">
			  <%= image_tag("/assets/images/garuda.png", height: '160', width: '160') %>
			</div>		
			<!-- Red color scheme -->
			<form action="" class="sky-form">
				<header>Formulir Lapor Diri dan Pendataan WNI di Korea Selatan</header>
				<fieldset>
					<div class="row">
						<section class="col col-4">
							<label class="label">Nama Lengkap</label>
							<label class="input">
								<i class="icon-append icon-user"></i>
								<input type="text">
							</label>
						</section>	
						<section class="col col-4">
							<label class="label">Tinggi Badan</label>
							<label class="input">
								<i class="icon-append icon-user"></i>
								<input type="text">
							</label>
						</section>
						<section class="col col-4">
							<label class="label">Pas Foto Digital</label>
							<label for="file" class="input input-file">
								<div class="button">
									<input type="file" id="file" onchange="this.parentNode.nextSibling.value = this.value">Unggah</div>
									<input type="text" readonly>
							</label>
						</section>			
					</div>

					<div class="row">
						<section class="col col-4">
							<label class="label">Tempat Lahir</label>	
							<label class="input">
									<i class="icon-append icon-globe"></i>
							<input type="text" name="placeBirth" id="place">
							</label>
						</section>

						<section class="col col-4">
							<label class="label">Tanggal Lahir</label>	
							<label class="input">
									<i class="icon-append icon-calendar"></i>
							<input type="text" name="dateBirth" id="dateBirth" class="datePick">
							</label>
						</section>
						
						<section class="col col-4">
							<label class="label">Status Perkawinan</label>
							<label class="select">
							<select>
								<option value="0">Pilih Status:</option>
								<option value="1">Kawin</option>
								<option value="2">Belum Kawin</option>
								<option value="3">Cerai</option>
							</select>
							<i></i>
							</label>
						</section>
					</div>
					
					<div class="row">
						<section class="col col-4">
							<label class="label">No Paspor</label>
							<label class="input">
								<i class="icon-append icon-book"></i>
								<input type="text">
							</label>
						</section>
						
						<section class="col col-4">
							<label class="label">Tanggal Terbit Paspor</label>
							<label class="input">
								<i class="icon-append icon-calendar"></i>
							<input type="text" name="dateIssued" id="dateIssued" class="datePick">
							</label>
						</section>
						
						<section class="col col-4">
							<label class="label">Tempat Pengeluaran Paspor</label>
							<label class="input">
								<i class="icon-append icon-globe"></i>
								<input type="text">
							</label>
						</section>
					</div>

					<div class="row">
						<section class="col col-3">
							<label class="label">Pekerjaan di Korea (dan Jenisnya)</label>
							<label class="input">
								<i class="icon-append icon-wrench"></i>
								<input type="text">
							</label>
						</section>
						
						<section class="col col-3">
							<label class="label">Nama Perusahaan/Sekolah/Instansi</label>
							<label class="input">
								<i class="icon-append icon-home"></i>
								<input type="text">
							</label>
							<div class="note"><strong>Note:</strong> Tuliskan pula nama hangeulnya bila ada.</div>
						</section>
						</section>
						
						<section class="col col-6">
						<label class="label">Alamat Perusahaan/Sekolah/Instansi</label>
						<label class="textarea textarea-expandable">
							<i class="icon-append icon-road"></i>
							<textarea rows="3"></textarea>
						</label>
						<div class="note"><strong>Note:</strong> Tuliskan dalam huruf hangeul.</div>
						</section>
					</div>

					<div class="row">
						<section class="col col-3">
							<label class="label">No Telepon di Korea</label>
							<label class="input">
								<i class="icon-append icon-phone"></i>
								<input type="text">
							</label>
						</section>
						
						<section class="col col-9">
						<label class="label">Alamat Tinggal di Korea</label>
						<label class="textarea textarea-expandable">
							<i class="icon-append icon-road"></i>
							<textarea rows="3"></textarea>
						</label>
						<div class="note"><strong>Note:</strong> Cantumkan alamat yang benar-benar bisa dihubungi, dalam hangeul (bila bisa).</div>
						</section>
					</div>

				    <div class="row">
				    <section class="col col-3">
							<label class="label">No Telepon di Indonesia</label>
							<label class="input">
								<i class="icon-append icon-phone"></i>
								<input type="text" name="placeBirth" id="place">
							</label>
						</section>
					<section class="col col-9">
						<label class="label">Alamat di Indonesia</label>
						<label class="textarea textarea-expandable">
							<i class="icon-append icon-home"></i>
							<textarea rows="3"></textarea>
						</label>
						<div class="note"><strong>Note:</strong> Tuliskan alamat yang benar-benar bisa dihubungi saat darurat.</div>
					</section>
				    </div>

				</fieldset>
				<fieldset>
					<div class="row">

						<section class="col col-6">
							<label class="label">Tiba di Korea</label>	
							<label class="input">
									<i class="icon-append icon-calendar"></i>
							<input type="text" name="dateArrival" id="dateArrival" class="datePick">
							</label>
							<div class="note"><strong>Note:</strong> Hanya diisi oleh WNI yang bekerja via skema G2G/EPS.</div>
						</section>

						<section class="col col-6">
							<label class="label">Dikirim oleh</label>
							<label class="select">
							<select>
								<option value="0">Pilih Pihak Pengirim:</option>
								<option value="1">PJTKI</option>
								<option value="2">BNP2TKI</option>
								<option value="3">Lain-Lain</option>
							</select>
							<i></i>
							</label>
							<div class="note"><strong>Note:</strong> Hanya diisi oleh WNI yang bekerja via skema G2G/EPS.</div>
						</section>
					</div>
				</fieldset>
				
				<footer>
					<button type="submit" class="button">Laporkan ke KBRI</button>
					<button type="button" class="button button-secondary" onclick="window.history.back();">Kembali</button>
				</footer>
			</form>
			<!--/ Red color scheme -->			
</div>
<script type="text/javascript">
			$(function()
			{
				// Regular datepicker
				$('.datePick').datepicker({
					dateFormat: 'dd.mm.yy',
					prevText: '<i class="icon-chevron-left"></i>',
					nextText: '<i class="icon-chevron-right"></i>'
				});
				
			});			
</script>