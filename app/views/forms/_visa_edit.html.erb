<div class="body" style="padding-top: 20px;">
			<div style="text-align: center;">
			  <%= image_tag("/assets/images/garuda.png", height: '160', width: '160') %>
			</div>		
			<!-- Red color scheme -->
			
			<%= simple_form_for :visa, url: visa_path(@visa), method: :patch, :html => { :class => "sky-form", :multipart => true } do |f| %>
				<header>
				<% if action_name == "immigration" then %>
					Visa Application Form to Republic of Indonesia
				<% else %>
					Visa Application Form for Gaining Entry/Extension Re-Entry Permit to Republic of Indonesia
				<% end %>
				</header>
				<fieldset>
					<div class="row">
						<section class="col col-6">
							<label class="label">Visa Reference No.:</label>
							<b><%= @visa.ref_id %></b>
						</section>
						<% if current_user.has_role? :admin or current_user.has_role? :moderator %>
						<section class="col col-6">
							<label class="label">Application Status</label>
							<label class="select">
								<%= f.input_field :status, 
								collection: { 'Received by The Embassy' => 'Received', 'Payment has been acknowledged' => 'Paid', 
									'Necessary visa data is completed' => 'Verified', 'Application is rejected' => 'Rejected', 
									'Interview Needed' => 'Interview' } %>
							<i></i>
							</label>
						</section>
						<% end %>
					</div>
				</fieldset>
				<fieldset>
					<div class="row">
						<section class="col col-6">
							<label class="label">Purpose</label>
							<label class="select">
							<%= f.input_field :application_type, 
							collection: { 'New Visa Application' => 3, 'Extension of Re-Entry Permit' => 4}  %>
							<i></i>
							</label>
						</section>
						<section class="col col-6 newVisa specialFieldType">
							<label class="label">Visa</label>
							<label class="select">
							<%= f.input_field :category_type, 
							collection: { 'Transit Visa' => 'transit', 'Visit Visa' => 'visit', 
								          'Limited Stay Visa' => 'limited-stay', 'Diplomatic Visa' => 'diplomatic', 
								          'Official Visa' => 'official' } %>
							<i></i>
							</label>
						</section>
					</div>
				</fieldset>
				
				<fieldset class="newVisa specialFieldType no-show">
					<div class="row">
						<section class="col col-8">
							<label class="label">Full Name</label>
							<label class="input">
								<i class="icon-append icon-user"></i>
								<%= f.input_field :full_name %>
							</label>
						</section>	
						
						<section class="col col-4">
						  <label class="label">Sex</label>
						  <label class="select">
						  		<%= f.input_field :sex, 
								collection: { 'Male' => 'M', 'Female' => 'F' } %>
								<i></i>
						  </label>
						</section>	
					</div>
					
					<div class="row">
						<section class="col col-4">
							<label class="label">Scanned Passport</label>
							<label for="file" class="input input-file">
								<div class="button">
									<%= f.input_field :passport, as: :file, class: 'fileplaceholder' %>Upload</div>
									<%= f.input_field :passportpath, readonly: true %>
							</label>
							<div class="note"><strong>Note:</strong> Format : JPG/JPEG/PNG. Max Size: 2MB</div>
						</section>
						
						<section class="col col-4">
							<label class="label">Scanned ID Card</label>
							<label for="file" class="input input-file">
								<div class="button">
									<%= f.input_field :idcard, as: :file, class: 'fileplaceholder' %>Upload</div>
									<%= f.input_field :idcardpath, readonly: true %>
							</label>
							<div class="note"><strong>Note:</strong> Format : JPG/JPEG/PNG. Max Size: 2MB</div>
						</section>
						<section class="col col-4">
							<label class="label">Passport Portrait Picture</label>
							<label for="file" class="input input-file">
								<div class="button">
									<%= f.input_field :photo, as: :file, class: 'fileplaceholder' %>Upload</div>
									<%= f.input_field :photopath, readonly: true %>
							</label>
							<div class="note"><strong>Note:</strong> Format : JPG/JPEG/PNG. Max Size: 2MB</div>
						</section>	
					</div>
					
					<div class="row">	
						<section class="col col-6">
							<label class="label">Supporting Document</label>
							<label for="file" class="input input-file">
								<div class="button">
									<%= f.input_field :supdoc, as: :file, class: 'fileplaceholder' %>Upload</div>
									<%= f.input_field :sup_docpath, readonly: true %>
							</label>
							<div class="note">
								<strong>Note:</strong> 
								It could be company reference letter, sponsor letter, letter of acceptance, etc. 
								Max Size: 2MB</div>
						</section>
						
						<section class="col col-6">
							<label class="label">Return Trip Ticket</label>
							<label for="file" class="input input-file">
								<div class="button">
									<%= f.input_field :ticket, as: :file, class: 'fileplaceholder' %>Upload</div>
									<%= f.input_field :ticketpath, readonly: true %>
							</label>
							<div class="note"><strong>Note:</strong> Format : JPG/JPEG/PNG or PDF. Max Size: 2MB</div>
						</section>	
					</div>
					
					<div class="row">
						<section class="col col-3">
							<label class="label">Place of Birth</label>	
							<label class="input">
									<i class="icon-append icon-globe"></i>
									<%= f.input_field :placeBirth %>
							</label>
						</section>

						<section class="col col-6">
							<label class="label">Date of Birth</label>	
							<label class="input">
									<i class="icon-append icon-calendar"></i>
									<%= f.input_field :dateBirth, class: 'datePick' %>
							</label>
							<div class="note"><strong>Note:</strong> Format is DD.MM.YYYY. Example, type '02.03.2014' (without single quote) for 02 March 2014.</div>
						</section>
						
						<section class="col col-3">
						  <label class="label">Marital Status</label>
						  <label class="select">
						  		<%= f.input_field :marital_status, 
								collection: { 'Married' => 'M', 'Single' => 'S' } %>
								<i></i>
						  </label>
						</section>
					</div>
					
					<div class="row">
						<section class="col col-6">
							<label class="label">Nationality</label>
							<label class="input">
								<i class="icon-append icon-globe"></i>
								<%= f.input_field :nationality %>
							</label>
						</section>
						
						<section class="col col-6">
							<label class="label">Profession</label>
							<label class="select">
							<%= f.input_field :profession, 
							collection: { 'Professional' => 'professional', 'Government' => 'government',
								          'Businessman' => 'businessman', 'Student' => 'student', 
								          'Housewife' => 'housewife', 'Others' => 'other' } %>
							<i></i>
							</label>
						</section>
				
					</div>
					
					<div class="row">
						<section class="col col-4">
							<label class="label">Passport No</label>
							<label class="input">
								<i class="icon-append icon-book"></i>
								<%= f.input_field :passport_no %>
							</label>
						</section>
						
						<section class="col col-4">
							<label class="label">Place of Issue</label>
							<label class="input">
								<i class="icon-append icon-globe"></i>
								<%= f.input_field :passport_issued %>
							</label>
						</section>
						
						<section class="col col-4">
							<label class="label">Type of Passport</label>
							<label class="select">
							<%= f.input_field :passport_type, 
							collection: { 'Ordinary' => 1, 'Official' => 2,
								          'Diplomatic' => 3, 'Laissez-passez' => 4 } %>
							<i></i>
							</label>
						</section>
						
					</div>

					<div class="row">
					
						<section class="col col-6">
							<label class="label">Date of Issuance</label>
							<label class="input">
								<i class="icon-append icon-calendar"></i>
							<%= f.input_field :passport_date_issued, class: 'datePick' %>
							</label>
							<div class="note"><strong>Note:</strong> Format is DD.MM.YYYY. Example, type '02.03.2014' (without single quote) for 02 March 2014.</div>
						</section>
						
						<section class="col col-6">
							<label class="label">Date of Expiry</label>
							<label class="input">
								<i class="icon-append icon-calendar"></i>
							<%= f.input_field :passport_date_expired, class: 'datePick' %>
							</label>
							<div class="note"><strong>Note:</strong> Format is DD.MM.YYYY. Example, type '02.03.2014' (without single quote) for 02 March 2014.</div>
						</section>
						
					</div>

				</fieldset>
				
				<fieldset class="newVisa specialFieldType no-show">
					<div class="row">
					  <section class="col col-2">
						<label class="label">Type of Sponsor</label>
						<label class="select">
							<%= f.input_field :sponsor_type_kr, 
							collection: { 'Individual' => 'individual', 'Government' => 'government',
								          'International Institution' => 'interinstitute', 'Company' => 'company',
								          'NGO' => 'ngo' , 'Others' => 'other'} %>
							<i></i>
					    </label>
					  </section>
					  
					  <section class="col col-4">
					  	<label class="label">Name of Reference in Korea</label>
						<label class="input">
								<i class="icon-append icon-user"></i>
								<%= f.input_field :sponsor_name_kr %>
						</label>
					  </section>
					  
					  <section class="col col-4">
					  	<label class="label">Reference's Address in Korea</label>
							<label class="textarea textarea-expandable">
							<i class="icon-append icon-road"></i>
							<%= f.input_field :sponsor_address_kr, as: :text, input_html: { row: 5 } %>
						</label>
					  </section>
					  <section class="col col-2">
					  	<label class="label">Phone No in Korea</label>
						<label class="input">
								<i class="icon-append icon-phone"></i>
								<%= f.input_field :sponsor_phone_kr %>
						</label>
					  </section>
					</div>
					
					<div class="row">
					  <section class="col col-2">
						<label class="label">Type of Sponsor</label>
						<label class="select">
							<%= f.input_field :sponsor_type_id, 
							collection: { 'Individual' => 'individual', 'Government' => 'government',
								          'International Institution' => 'interinstitute', 'Company' => 'company',
								          'NGO' => 'ngo', 'Others' => 'other'} %>
							<i></i>
					    </label>
					  </section>
					  
					  <section class="col col-4">
					  	<label class="label">Name of Reference in Indonesia</label>
						<label class="input">
								<i class="icon-append icon-user"></i>
								<%= f.input_field :sponsor_name_id %>
						</label>
					  </section>
					  
					  <section class="col col-4">
					  	<label class="label">Reference's Address in Indonesia</label>
							<label class="textarea textarea-expandable">
							<i class="icon-append icon-road"></i>
							<%= f.input_field :sponsor_address_id, input_html: { row: 5 }, as: :text %>
						</label>
					  </section>
					  
					  <section class="col col-2">
					  	<label class="label">Phone No in Indonesia</label>
						<label class="input">
								<i class="icon-append icon-phone"></i>
								<%= f.input_field :sponsor_phone_id %>
						</label>
					  </section>
					</div>
				</fieldset>
				
				<fieldset class="newVisa specialFieldType no-show">
					<div class="row">
						<section class="col col-3">
							<label class="label">Duration of Stays</label>	
							<label class="input">
								<i class="icon-append icon-calendar"></i>
								<%= f.input_field :duration_stays %>
							</label>
						</section>
						
						<section class="col col-3">
							<label class="label">In</label>	
							<label class="select">
								<i class="icon-append icon-calendar"></i>
								<%= f.input_field :duration_stays_unit, 
								collection: { 'Days' => 1, 'Months' => 2, 'Years' => 3 } %>
								<i></i>
							</label>
						</section>

						<section class="col col-6">
							<label class="label">Visa Type</label>
							<label class="select">
							<%= f.input_field :num_entry, 
							collection: { 'Single Entry' => 'S', 'Multiple Entry' => 'M' } %>
							<i></i>
							</label>
							<div class="note">The final decision is <strong>Subject</strong> to The Embassy of Indonesia's discretion.</div>
						</section>
					</div>
				</fieldset>
				
				<fieldset id="transit" class="specialFieldCat no-show">
				<div class="row">
					<section class="col col-8" style="color: red; text-decoration: underline; font-weight: bold;">
						NOTE: Only Edit/Modify This Section IF You Apply TRANSIT VISA:</section>
				</div>
				<div class="row">
				  <section class="col col-3">
					<label class="label">Country of Destination</label>
					<label class="input">
						<i class="icon-append icon-globe"></i>
						<%= f.input_field :tr_count_dest %>
					</label>
				  </section>
				  
				  <section class="col col-2">
				    <label class="label">Flight/Vessel Name</label>
					<label class="input">
						<i class="icon-append icon-plane"></i>
						<%= f.input_field :tr_flight_vessel %>
					</label>
				  </section>
				  
				  <section class="col col-4">
					<label class="label">Airport/Seaport Destination</label>
					<label class="input">
						<i class="icon-append icon-anchor"></i>
						<%= f.input_field :tr_air_sea_port %>
					</label>
				  </section>
				  
				  <section class="col col-3">
					<label class="label">Date of Entry to Indonesia</label>
					<label class="input">
						<i class="icon-append icon-calendar"></i>
						<%= f.input_field :tr_date_entry, class: 'datePick' %>
					</label>
					<div class="note"><strong>Note:</strong> Format is DD.MM.YYYY. Example, type '02.03.2014' (without single quote) for 02 March 2014.</div>
				  </section>
				</div>  
				</fieldset>
				
				<fieldset id="limited-stay" class="specialFieldCat no-show">
				  <div class="row">
					<section class="col col-8" style="color: red; text-decoration: underline; font-weight: bold;">
						NOTE: Only Edit/Modify This Section IF You Apply LIMITED STAY VISA:</section>
				  </div>
			      <div class="row">
				  <section class="col col-3">
					<label class="label">Purpose of Limited Stay</label>
					<label class="select">
						<%= f.input_field :lim_s_purpose, 
						collection: { 'Work' => 'work', 'Joint Family' => 'family',
								      'Social' => 'social', 'Others' => 'other'} %>
							<i></i>
					</label>
					<div class="note">Please bring supporting <strong>Documents</strong> (if any) during interview session.</div>
				  </section>
				  
				  <section class="col col-2">
				    <label class="label">Flight/Vessel Name</label>
					<label class="input">
						<i class="icon-append icon-plane"></i>
						<%= f.input_field :lim_s_flight_vessel %>
					</label>
				  </section>
				  
				  <section class="col col-4">
					<label class="label">Airport/Seaport Destination</label>
					<label class="input">
						<i class="icon-append icon-anchor"></i>
						<%= f.input_field :lim_s_air_sea_port %>
					</label>
				  </section>
				  
				  <section class="col col-3">
					<label class="label">Date of Entry to Indonesia</label>
					<label class="input">
						<i class="icon-append icon-calendar"></i>
						<%= f.input_field :lim_s_date_entry, class: 'datePick' %>
					</label>
					<div class="note"><strong>Note:</strong> Format is DD.MM.YYYY. Example, type '02.03.2014' (without single quote) for 02 March 2014.</div>
				  </section>
				</div>
				  
				</fieldset>
				
				<fieldset id="visit" class="specialFieldCat no-show">
				  <div class="row">
					<section class="col col-8" style="color: red;  text-decoration: underline; font-weight: bold;">
						NOTE: Only Edit/Modify This Section IF You Apply VISIT VISA:</section>
				  </div>
				  <div class="row">
				  <section class="col col-3">
					<label class="label">Purpose of Visit</label>
					<label class="select">
						<%= f.input_field :v_purpose, 
						collection: { 'Tourism' => 'tourism', 'Study' => 'study',
								      'Convention' => 'convention', 'Arts' => 'art',
								      'Family Visit' => 'family-visit', 'Commercial' => 'commercial',
								      'Sports' => 'sport', 'Others' => 'other'} %>
							<i></i>
					</label>
					<div class="note">Please bring supporting <strong>Documents</strong> (if any) during interview session.</div>
				  </section>
				  
				  <section class="col col-2">
				    <label class="label">Flight/Vessel Name</label>
					<label class="input">
						<i class="icon-append icon-plane"></i>
						<%= f.input_field :v_flight_vessel %>
					</label>
				  </section>
				  
				  <section class="col col-4">
					<label class="label">Airport/Seaport Destination</label>
					<label class="input">
						<i class="icon-append icon-anchor"></i>
						<%= f.input_field :v_air_sea_port %>
					</label>
				  </section>
				  
				  <section class="col col-3">
					<label class="label">Date of Entry to Indonesia</label>
					<label class="input">
						<i class="icon-append icon-calendar"></i>
						<%= f.input_field :v_date_entry, class: 'datePick' %>
					</label>
					<div class="note"><strong>Note:</strong> Format is DD.MM.YYYY. Example, type '02.03.2014' (without single quote) for 02 March 2014.</div>
				  </section>
				</div>
				  
				</fieldset>
				
				<fieldset id="diplomatic" class="specialFieldCat no-show">
				  <div class="row">
					<section class="col col-8" style="color: red; text-decoration: underline; font-weight: bold;">
						NOTE: Only Edit/Modify This Section IF You Apply DIPLOMATIC VISA:</section>
				  </div>
				  <div class="row">
				  <section class="col col-3">
					<label class="label">Purpose of Visit</label>
					<label class="select">
						<%= f.input_field :dip_purpose, 
						collection: { 'Posting' => 'posting', 'Training' => 'training',
								      'Joint Family' => 'family', 'Others' => 'other' } %>
							<i></i>
					</label>
				  </section>
				  
				  <section class="col col-2">
				    <label class="label">Flight/Vessel Name</label>
					<label class="input">
						<i class="icon-append icon-plane"></i>
						<%= f.input_field :dip_flight_vessel %>
					</label>
				  </section>
				  
				  <section class="col col-4">
					<label class="label">Airport/Seaport Destination</label>
					<label class="input">
						<i class="icon-append icon-anchor"></i>
						<%= f.input_field :dip_air_sea_port %>
					</label>
				  </section>
				  
				  <section class="col col-3">
					<label class="label">Date of Entry to Indonesia</label>
					<label class="input">
						<i class="icon-append icon-calendar"></i>
						<%= f.input_field :dip_date_entry, class: 'datePick' %>
					</label>
					<div class="note"><strong>Note:</strong> Format is DD.MM.YYYY. Example, type '02.03.2014' (without single quote) for 02 March 2014.</div>
				  </section>
				</div>
				
				</fieldset>
				
				<fieldset id="official" class="specialFieldCat no-show">
				  <div class="row">
					<section class="col col-8" style="color: red; text-decoration: underline; font-weight: bold;">
						NOTE: Only Edit/Modify This Section IF You Apply OFFICIAL VISA:</section>
				  </div>
				  <div class="row">
				  <section class="col col-3">
					<label class="label">Purpose of Visit</label>
					<label class="select">
						<%= f.input_field :o_purpose, 
						collection: { 'Posting' => 'posting', 'Training' => 'training',
								      'Joint Family' => 'family', 'Others' => 'other' } %>
							<i></i>
					</label>
				  </section>
				  
				  <section class="col col-2">
				    <label class="label">Flight/Vessel Name</label>
					<label class="input">
						<i class="icon-append icon-plane"></i>
						<%= f.input_field :o_flight_vessel %>
					</label>
				  </section>
				  
				  <section class="col col-4">
					<label class="label">Airport/Seaport Destination</label>
					<label class="input">
						<i class="icon-append icon-anchor"></i>
						<%= f.input_field :o_air_sea_port %>
					</label>
				  </section>
				  
				  <section class="col col-3">
					<label class="label">Date of Entry to Indonesia</label>
					<label class="input">
						<i class="icon-append icon-calendar"></i>
						<%= f.input_field :o_date_entry, class: 'datePick' %>
					</label>
					<div class="note"><strong>Note:</strong> Format is DD.MM.YYYY. Example, type '02.03.2014' (without single quote) for 02 March 2014.</div>
				  </section>
				</div>
								  
				</fieldset>
				
				<fieldset class="newVisa specialFieldType no-show">
					<section><p style="text-align: right; font-weight: bold;">Seoul, <%= Date.current.strftime("%A, %v") %></p></section>
				</fieldset>
				
				<fieldset class="newVisa specialFieldType no-show">
					<section class="col col-9">
					I hereby declare that statements given above are true and I understand that even if granted a visa, 
					the admission at the airport fully remains the discretion of the immigration authorities in Indonesia.
					</section>
					
					<section class="col col-3">
					<pre>(Signature & Full Name)</pre>
					</section>				
				</fieldset>
				
				<fieldset>
					<div class="row">
						<section class="col col-6">
							<label class="label"> Scanned/Photographed Payment Slip for Visa</label>
							<label for="file" class="input input-file">
								<div class="button">
									<%= f.input_field :slip_photo, as: :file, class: 'fileplaceholder' %>Unggah</div>
									<%= f.input_field :payment_slip, readonly: true %>
							</label>
							<div class="note"><strong>Catatan:</strong> Hanya berkas gambar JPG/JPEG/PNG. Ukuran Maks. 2MB</div>
						</section>	
						<section class="col col-6">
							<label class="label">Date of Visa Fee Payment</label>	
							<label class="input">
									<i class="icon-append icon-calendar"></i>
									<%= f.input_field :payment_date, class: 'datePick' %>
							</label>
							<div class="note"><strong>Note:</strong> Format is DD.MM.YYYY. Example, type '02.03.2014' (without single quote) for 02 March 2014.</div>
						</section>		
					</div>
				</fieldset>
				
				<footer>
					<button type="submit" class="button">Update Application</button>
					<button type="button" class="button button-secondary" onclick="window.history.back();">Back</button>
				</footer>
			<% end %>
