<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<script type="text/javascript" src="/assets/js/jquery-ui-1.10.3.custom.min.js"></script>
<script type="text/javascript">
	$(function()
		{
				$( ".no-show" ).css("display", "none");
									//console.log();
									
				// Adjusting suitable form
				$( "#visa_application_type" ).change(function() {
  					var str = "";
    				str = $( "#visa_application_type option:selected" ).val();
    				if(str == 3){
    					var aClass = ".newVisa";
    				}else if(str == 4){
    					var aClass = ".reEntry";
    				}
    				$( ".specialFieldType" ).addClass("no-show").css("display", "none");
					$( aClass ).removeClass("no-show").css("display","block");
				});
				
				$( "#visa_category_type" ).change(function() {
  					var str = "";
    				str = $( "#visa_category_type option:selected" ).val();
    				var id = "#"+str;
    				$( ".specialFieldCat" ).addClass("no-show").css("display", "none");
					if(id != "none") {
						$( id ).removeClass("no-show").css("display","block");
					}
				});
				
				// Regular datepicker
				$( '.datePick' ).datepicker({
					dateFormat: 'dd.mm.yy',
					prevText: '<i class="icon-chevron-left"></i>',
					nextText: '<i class="icon-chevron-right"></i>'
				});
				
				$('.fileplaceholder').change(function(){					
					filename = $(this).val();
					$(this).parent().next().val(filename.split("\\").pop());
				});
								
				//console.log();
				
		});			
</script>