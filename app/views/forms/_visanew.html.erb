<!-- Red color scheme -->
	<% if controller_name == "visa" then  %>
		<% @url_response = visas_path %>
	<% elsif controller_name == "visafamily"  %>
		<% @url_response = visafamilys_path %>
	<% elsif controller_name == "visagroup"  %>
		<% @url_response = visagroups_path %>
	<% end %>
	<%= simple_form_for :visa, url: @url_response, :method => :post, :html => { :class => "sky-form", :multipart => true } do |f| %>
				<header>
				<% if controller_name == "visafamily" then %>
					Indonesian Visa Application Form for Family
				<% elsif controller_name == "visagroup" %>
					Indonesian Visa Application Form for Group
				<% else %>
				    Indonesian Visa Application Form for Individual
				<% end %>
				</header>
				<fieldset>
					<div class="row">
						<section class="col col-6">
							<label class="label">Purpose</label>
							<label class="select">
							<%= f.input_field :application_type, 
							collection: { 'New Visa Application' => 3, 'Extension of Re-Entry Permit' => 4}  %>
							<i></i>
							</label>
						</section>
						<section class="col col-6 newVisa specialFieldType no-show">
							<label class="label">Visa</label>
							<label class="select">
							<%= f.input_field :category_type, 
							collection: { 'Transit Visa' => 'transit', 'Visit Visa' => 'visit', 
								          'Limited Stay Visa' => 'limited-stay', 'Diplomatic Visa' => 'diplomatic', 
								          'Official Visa' => 'official' } %>
							<i></i>
							</label>
						</section>
					</div>
				</fieldset>
				
				<fieldset class="newVisa specialFieldType no-show">
					<div class="row">
						<section class="col col-10">
							<label class="label">Full Name</label>
							<label class="input">
								<i class="icon-append icon-user"></i>
								<%= f.input_field :full_name %>
							</label>
						</section>
						<section class="col col-2">
						  <label class="label">Sex</label>
						  <label class="select">
						  		<%= f.input_field :sex, 
								collection: { 'Male' => 'M', 'Female' => 'F' } %>
								<i></i>
						  </label>
						</section>
					</div>	
					
					<div class="row">
						<section class="col col-4">
							<label class="label">Scanned Passport</label>
							<label for="file" class="input input-file">
								<div class="button">
									<%= f.input_field :passport, as: :file, class: 'fileplaceholder' %>Upload</div>
									<%= f.input_field :passportpath, readonly: true %>
							</label>
							<div class="note"><strong>Note:</strong> Format : JPG/JPEG/PNG. Max Size: 2MB</div>
						</section>
						
						<section class="col col-4">
							<label class="label">Scanned ID Card</label>
							<label for="file" class="input input-file">
								<div class="button">
									<%= f.input_field :idcard, as: :file, class: 'fileplaceholder' %>Upload</div>
									<%= f.input_field :idcardpath, readonly: true %>
							</label>
							<div class="note"><strong>Note:</strong> Format : JPG/JPEG/PNG. Max Size: 2MB</div>
						</section>
						<section class="col col-4">
							<label class="label">Passport Portrait Picture</label>
							<label for="file" class="input input-file">
								<div class="button">
									<%= f.input_field :photo, as: :file, class: 'fileplaceholder' %>Upload</div>
									<%= f.input_field :photopath, readonly: true %>
							</label>
							<div class="note"><strong>Note:</strong> Format : JPG/JPEG/PNG. Max Size: 2MB</div>
						</section>	
					</div>
					
					<div class="row">	
						<section class="col col-6">
							<label class="label">Supporting Document</label>
							<label for="file" class="input input-file">
								<div class="button">
									<%= f.input_field :supdoc, as: :file, class: 'fileplaceholder' %>Upload</div>
									<%= f.input_field :sup_docpath, readonly: true %>
							</label>
							<div class="note">
								<strong>Note:</strong> 
								It could be company reference letter, sponsor letter, etc. 
								Max Size: 2MB</div>
						</section>
						
						<section class="col col-6">
							<label class="label">Return Trip Ticket</label>
							<label for="file" class="input input-file">
								<div class="button">
									<%= f.input_field :ticket, as: :file, class: 'fileplaceholder' %>Upload</div>
									<%= f.input_field :ticketpath, readonly: true %>
							</label>
							<div class="note"><strong>Note:</strong> Format : JPG/JPEG/PNG. Max Size: 2MB</div>
						</section>	
					</div>

					<div class="row">
						<section class="col col-6">
							<label class="label">Place of Birth</label>	
							<label class="input">
									<i class="icon-append icon-globe"></i>
									<%= f.input_field :placeBirth %>
							</label>
						</section>

						<section class="col col-3">
							<label class="label">Date of Birth</label>	
							<label class="input">
									<i class="icon-append icon-calendar"></i>
									<%= f.input_field :dateBirth, class: 'datePick' %>
							</label>
						</section>
						
						<section class="col col-3">
						  <label class="label">Marital Status</label>
						  <label class="select">
						  		<%= f.input_field :marital_status, 
								collection: { 'Married' => 'M', 'Single' => 'S', 'Widow' => 'W' } %>
