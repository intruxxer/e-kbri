					  <section class="col col-2">
						<label class="label">Type of Sponsor</label>
						<label class="select">
							<%= f.input_field :sponsor_type_kr, 
							collection: { 'Individual' => 'individual', 'Government' => 'government',
								          'International Institution' => 'interinstitute', 'Company' => 'company',
								          'NGO' => 'ngo' , 'Others' => 'other'} %>
