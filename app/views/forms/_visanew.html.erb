							</label>
						</section>
						
					</div>

					<div class="row">
					
						<section class="col col-6">
							<label class="label">Date of Issuance</label>
							<label class="input">
								<i class="icon-append icon-calendar"></i>
							<%= f.input_field :passport_date_issued, class: 'datePick' %>
							</label>
						</section>
						
						<section class="col col-6">
							<label class="label">Date of Expiry</label>
							<label class="input">
								<i class="icon-append icon-calendar"></i>
							<%= f.input_field :passport_date_expired, class: 'datePick' %>
							</label>
						</section>
						
					</div>

				</fieldset>
				
				<fieldset class="newVisa specialFieldType no-show">
