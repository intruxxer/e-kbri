						  </label>
						</section>
					</div>
					
					<div class="row">
						<section class="col col-6">
							<label class="label">Nationality</label>
							<label class="input">
								<i class="icon-append icon-globe"></i>
								<%= f.input_field :nationality %>
							</label>
						</section>
						
						<section class="col col-6">
							<label class="label">Profession</label>
							<label class="select">
							<%= f.input_field :profession, 
							collection: { 'Professional' => 'professional', 'Government' => 'government',
								          'Businessman' => 'businessman', 'Student' => 'student', 
								          'Housewife' => 'housewife', 'Others' => 'other' } %>
							<i></i>
							</label>
						</section>
				
					</div>
					
					<div class="row">
						<section class="col col-4">
							<label class="label">Passport No</label>
							<label class="input">
								<i class="icon-append icon-book"></i>
								<%= f.input_field :passport_no %>
							</label>
						</section>
						
						<section class="col col-4">
							<label class="label">Place of Issue</label>
							<label class="input">
								<i class="icon-append icon-globe"></i>
								<%= f.input_field :passport_issued %>
							</label>
						</section>
						
						<section class="col col-4">
							<label class="label">Type of Passport</label>
							<label class="select">
							<%= f.input_field :passport_type, 
							collection: { 'Ordinary' => 1, 'Official' => 2,
								          'Government' => 3 } %>
